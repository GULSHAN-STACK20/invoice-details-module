# Environment Variables Example
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/fixwala
# For MongoDB Atlas (cloud):
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fixwala?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS if needed)
CLIENT_URL=http://localhost:3000

# Optional: JWT Secret (if you implement authentication)
# JWT_SECRET=your-secret-key-here

# Optional: Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-password
